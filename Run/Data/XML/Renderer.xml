<?xml version="1.0" encoding="ISO-8859-1"?>
<renderer>

  <render_targets default="backbuffer">
  
    <backbuffer_render_target name="backbuffer" />
  
    <texture_render_targets>
      
      <texture_render_target name="RT0_ARGB_8" format="A8R8G8B8" texture="RT0_ARGB_8"/>
      <texture_render_target name="RT1_ARGB_8" format="A8R8G8B8" texture="RT1_ARGB_8"/>
      <texture_render_target name="RT2_ARGB_8" format="A8R8G8B8" texture="RT2_ARGB_8"/>
      <texture_render_target name="RT3_ARGB_8" format="A8R8G8B8" texture="RT3_ARGB_8"/>
      <texture_render_target name="RT4_ARGB_8" format="A8R8G8B8" texture="RT4_ARGB_8"/>
      <texture_render_target name="RT1_RG_16F" format="R16G16F" texture="RT1_RG_16F"/>
      <texture_render_target name="RT_R_32F" format="R32F" width="1024" height="1024" texture="RT_R_32F" />
      
      <texture_render_target name="HDR_COLOR"       format="A16B16G16R16F" texture="HDR_COLOR"      />
      <texture_render_target name="HDR_LUMINANCE"   format="R32G32F"       texture="HDR_LUMINANCE"  />
      <texture_render_target name="HDR_BLOOM_FIRST" format="A16B16G16R16F" texture="HDR_BLOOM_FIRST"/>
      <texture_render_target name="HDR_GLOW"        format="A16B16G16R16F" texture="HDR_GLOW"       />
      
      <texture_render_target name="HDR_LUMINANCE_243"   format="R16G16F"       texture="HDR_LUMINANCE_243"   width="243" height="243" />
      <texture_render_target name="HDR_LUMINANCE_81"    format="R16G16F"       texture="HDR_LUMINANCE_81"    width="81"  height="81"/>
      <texture_render_target name="HDR_LUMINANCE_27"    format="R16G16F"       texture="HDR_LUMINANCE_27"    width="27"  height="27"/>
      <texture_render_target name="HDR_LUMINANCE_9"     format="R16G16F"       texture="HDR_LUMINANCE_9"     width="9"   height="9"/>
      <texture_render_target name="HDR_LUMINANCE_3"     format="R16G16F"       texture="HDR_LUMINANCE_3"     width="3"   height="3"/>
      <texture_render_target name="HDR_LUMINANCE_1"     format="R16G16F"       texture="HDR_LUMINANCE_1"     width="1"   height="1"/>
      <texture_render_target name="HDR_LUMINANCE_FINAL" format="R16G16F"       texture="HDR_LUMINANCE_FINAL" width="1"   height="1"/>
      
      <texture_render_target name="HDR_BLOOM_2"        format="A16B16G16R16F" texture="HDR_BLOOM_2"        size="0.5" />
      <texture_render_target name="HDR_BLOOM_4"        format="A16B16G16R16F" texture="HDR_BLOOM_4"        size="0.25"/>
      <texture_render_target name="HDR_BLOOM_VERTICAL" format="A16B16G16R16F" texture="HDR_BLOOM_VERTICAL" size="0.25"/>
      <texture_render_target name="HDR_BLOOM_FINAL"    format="A16B16G16R16F" texture="HDR_BLOOM_FINAL"    size="0.25"/>
    </texture_render_targets>
    
    <multiple_render_targets>
    
      <multiple_render_target name="forward_MRT">
        <texture_render_target name="RT0_ARGB_8" index="0" />
        <texture_render_target name="RT1_ARGB_8" index="1" />
      </multiple_render_target>
      
      <multiple_render_target name="deferred_MRT">
        <texture_render_target name="RT0_ARGB_8" index="0" />
        <texture_render_target name="RT3_ARGB_8" index="1" />
        <texture_render_target name="RT1_RG_16F" index="2" />
        <texture_render_target name="RT1_ARGB_8" index="3" />
      </multiple_render_target>
      
      <multiple_render_target name="HDR_MRT">
        <texture_render_target name="HDR_BLOOM_FIRST" index="0" />
        <texture_render_target name="HDR_LUMINANCE"   index="1" />
      </multiple_render_target>
      
      <multiple_render_target name="HDR_ALPHA">
        <texture_render_target name="HDR_COLOR"  index="0" />
        <texture_render_target name="HDR_GLOW"   index="1" /> <!-- GLOW -->
      </multiple_render_target>
      
    </multiple_render_targets>
    
  </render_targets>
  
  <pre_scene_renderers>

    <pre_scene_renderer name="shadow_map_renderer" type="shadow_map_scene_renderer" render_target="RT_R_32F" active="false">

      <material_effects static_mesh_effect="Depth" animated_model_effect="AnimatedDepth" />

    </pre_scene_renderer>
    
    <!--<pre_scene_renderer name="glow_renderer" type="pre_scene_renderer" active="true">

      <render_targets>
        <render_target index="0" texture="glow_texture" />
      </render_targets>

      <material_effects static_mesh_effect="Glow" animated_model_effect="AnimatedGlow" />

    </pre_scene_renderer>-->
    
  </pre_scene_renderers>

  <scene_renderers default_renderer="deferred_renderer">
    
    <scene_renderer name="forward_renderer" type="scene_renderer" render_target="forward_MRT" 
                    clear_color="true" clear_depth="1.0">

      <input_samplers>
        <input_sampler type="texture" index="5" texture="RT_R_32F"/>
      </input_samplers>

      <material_effects particle_effect="Particle">
        <material_effect material_type="0"   effect="Diffused" />
        <material_effect material_type="2"   effect="Textured" />
        <material_effect material_type="514" effect="TexturedEnvironment" />
        <material_effect material_type="518" effect="NormalmapEnvironment" />
        <material_effect material_type="3"   effect="AnimatedTextured" />
        <material_effect material_type="6"   effect="Normalmap" />
        <material_effect material_type="7"   effect="AnimatedNormalmap" />
        <material_effect material_type="34"  effect="Textured" />
        <material_effect material_type="38"  effect="Normalmap" />
        <material_effect material_type="39"  effect="AnimatedNormalmap" />
        <material_effect material_type="10"  effect="Lightmap" />
        <material_effect material_type="14"  effect="LightmapNormalmap" />
        <material_effect material_type="134" effect="RadiosityNormalmap" />
        <material_effect material_type="18"  effect="SpecularTextured" />
        <material_effect material_type="22"  effect="SpecularNormalmapTextured" />
        <material_effect material_type="23"  effect="AnimatedSpecularNormalmapTextured" />
        <material_effect material_type="26"  effect="SpecularLightmapTextured" />
        <material_effect material_type="30"  effect="SpecularLightmapNormalmapTextured" />
        <material_effect material_type="150" effect="SpecularRadiosityNormalmapTexturedTechnique" />
        <material_effect material_type="55"  effect="AnimatedSpecularNormalmapTextured" />
      </material_effects>
    
    </scene_renderer>
    
    <scene_renderer name="deferred_renderer" type="scene_renderer" render_target="deferred_MRT" 
                    clear_color="true" clear_depth="1.0" render_alpha="false">
    
      <!--<input_samplers>
        <input_sampler type="texture" index="5" texture="RT_R_32F"/>
      </input_samplers>-->
      
      <material_effects>
        <material_effect material_type="0"   effect="NormalDiffusedDeferred" />
        <material_effect material_type="2"   effect="NormalTexturedDeferred" />
        <!--<material_effect material_type="514" effect="TexturedEnvironment" />
        <material_effect material_type="518" effect="NormalmapEnvironment" />-->
        <material_effect material_type="3"   effect="AnimatedNormalTexturedDeferred" />
        <material_effect material_type="6"   effect="NormalmapTexturedDeferred" />
        <material_effect material_type="7"   effect="AnimatedNormalmapTexturedDeferred" />
        <material_effect material_type="34"  effect="NormalTexturedDeferred" />
        <material_effect material_type="35"  effect="AnimatedNormalTexturedDeferred" />
        <material_effect material_type="38"  effect="NormalmapTexturedDeferred" />
        <material_effect material_type="39"  effect="AnimatedNormalmapTexturedDeferred" />
        <material_effect material_type="10"  effect="NormalTexturedDeferred" />
        <material_effect material_type="14"  effect="NormalmapTexturedDeferred" />
        <!--<material_effect material_type="134" effect="RadiosityNormalmap" />-->
        <material_effect material_type="18"  effect="SpecularmapNormalTexturedDeferred" />
        <material_effect material_type="22"  effect="SpecularmapNormalmapTexturedDeferred" />
        <material_effect material_type="23"  effect="AnimatedNormalmapTexturedDeferred" />
        <material_effect material_type="26"  effect="SpecularmapNormalTexturedDeferred" />
        <material_effect material_type="30"  effect="SpecularmapNormalmapTexturedDeferred" />
        <!--<material_effect material_type="150" effect="SpecularRadiosityNormalmapTexturedTechnique" />-->
        <material_effect material_type="55"  effect="AnimatedSpecularmapNormalmapTexturedDeferred" />
      </material_effects> 
      
    </scene_renderer>
    
    <scene_renderer name="deferred_alpha"
                    render_target="RT4_ARGB_8"
                    clear_color="true"
                    clear_color_value="0.0 0.0 0.0 0.0"
                    render_opaque="false" 
                    render_alpha="true">

      <material_effects particle_effect="Particle">
        <material_effect material_type="0"   effect="Diffused" />
        <material_effect material_type="2"   effect="Textured" />
        <material_effect material_type="514" effect="TexturedEnvironment" />
        <material_effect material_type="518" effect="NormalmapEnvironment" />
        <material_effect material_type="3"   effect="AnimatedTextured" />
        <material_effect material_type="6"   effect="Normalmap" />
        <material_effect material_type="7"   effect="AnimatedNormalmap" />
        <material_effect material_type="34"  effect="Textured" />
        <material_effect material_type="38"  effect="Normalmap" />
        <material_effect material_type="39"  effect="AnimatedNormalmap" />
        <material_effect material_type="10"  effect="Lightmap" />
        <material_effect material_type="14"  effect="LightmapNormalmap" />
        <material_effect material_type="134" effect="RadiosityNormalmap" />
        <material_effect material_type="18"  effect="SpecularTextured" />
        <material_effect material_type="22"  effect="SpecularNormalmapTextured" />
        <material_effect material_type="23"  effect="AnimatedSpecularNormalmapTextured" />
        <material_effect material_type="26"  effect="SpecularLightmapTextured" />
        <material_effect material_type="30"  effect="SpecularLightmapNormalmapTextured" />
        <material_effect material_type="150" effect="SpecularRadiosityNormalmapTexturedTechnique" />
        <material_effect material_type="55"  effect="AnimatedSpecularNormalmapTextured" />
      </material_effects>
      
    </scene_renderer>
    

    <scene_renderer name="show_normals_renderer" type="scene_renderer" clear_color="true" clear_depth="1.0">
      <material_effects static_mesh_effect="ShowNormals" animated_model_effect="AnimatedShowNormals" />
    </scene_renderer>
    
    <scene_renderer name="show_normalmap_renderer" type="scene_renderer" clear_color="true" clear_depth="1.0">
      <material_effects static_mesh_effect="ShowNormalmap" animated_model_effect="AnimatedShowNormalmap" />
    </scene_renderer>
    
    <scene_renderer name="show_flat_normalmap_renderer" type="scene_renderer" clear_color="true" clear_depth="1.0">
      <material_effects static_mesh_effect="ShowFlatNormalmap" animated_model_effect="AnimatedShowFlatNormalmap" />
    </scene_renderer>
    
    <scene_renderer name="show_tangent_renderer" type="scene_renderer" clear_color="true" clear_depth="1.0">
      <material_effects static_mesh_effect="ShowTangent" animated_model_effect="AnimatedShowTangent" />
    </scene_renderer>
    
    <scene_renderer name="show_bitangent_renderer" type="scene_renderer" clear_color="true" clear_depth="1.0">
      <material_effects static_mesh_effect="ShowBitangent" animated_model_effect="AnimatedShowBitangent" />
    </scene_renderer>
    
    <scene_renderer name="show_uv_coords_renderer" type="scene_renderer" clear_color="true" clear_depth="1.0">
      <material_effects static_mesh_effect="ShowUVCoords" animated_model_effect="AnimatedShowUVCoords" />
    </scene_renderer>
    
  </scene_renderers>

  <post_scene_renderers>
   
    <post_scene_renderer name="deferred_ambient" effect="DeferredAmbientPass" active="true" >

      <input_samplers>
        <input_sampler type="texture" index="0" texture="RT0_ARGB_8"/>
      </input_samplers>

    </post_scene_renderer>
    
    <post_scene_renderer name="deferred lighting" 
                         type="deferred_post_scene_renderer" 
                         effect="DeferredLightPass" 
                         active="true">

      <input_samplers>
        <input_sampler type="texture" index="0" texture="RT0_ARGB_8"/>
        <input_sampler type="texture" index="1" texture="RT3_ARGB_8"/>
        <input_sampler type="texture" index="2" texture="RT1_RG_16F"/>
      </input_samplers>
      
    </post_scene_renderer>
    
    <post_scene_renderer name="deferred ambient debug" effect="DeferredAmbientPass" size="0.5" aspect_ratio="true" position="0.5 0.0" >

      <input_samplers>
        <input_sampler type="texture" index="0" texture="RT0_ARGB_8"/>
        <input_sampler type="texture" index="1" texture="RT2_ARGB_8"/>
      </input_samplers>

    </post_scene_renderer>
    
    
    <post_scene_renderer name="deferred_alpha"
                         type="render_objects_post_scene_renderer"
                         render_opaque="false" 
                         render_alpha="true">

      <material_effects particle_effect="Particle">
        <material_effect material_type="0"   effect="Diffused" />
        <material_effect material_type="2"   effect="Textured" />
        <material_effect material_type="514" effect="TexturedEnvironment" />
        <material_effect material_type="518" effect="NormalmapEnvironment" />
        <material_effect material_type="3"   effect="AnimatedTextured" />
        <material_effect material_type="6"   effect="Normalmap" />
        <material_effect material_type="7"   effect="AnimatedNormalmap" />
        <material_effect material_type="34"  effect="Textured" />
        <material_effect material_type="38"  effect="Normalmap" />
        <material_effect material_type="39"  effect="AnimatedNormalmap" />
        <material_effect material_type="10"  effect="Lightmap" />
        <material_effect material_type="14"  effect="LightmapNormalmap" />
        <material_effect material_type="134" effect="RadiosityNormalmap" />
        <material_effect material_type="18"  effect="SpecularTextured" />
        <material_effect material_type="22"  effect="SpecularNormalmapTextured" />
        <material_effect material_type="23"  effect="AnimatedSpecularNormalmapTextured" />
        <material_effect material_type="26"  effect="SpecularLightmapTextured" />
        <material_effect material_type="30"  effect="SpecularLightmapNormalmapTextured" />
        <material_effect material_type="150" effect="SpecularRadiosityNormalmapTexturedTechnique" />
        <material_effect material_type="55"  effect="AnimatedSpecularNormalmapTextured" />
      </material_effects>
      
    </post_scene_renderer>
    
    <post_scene_renderer name="deferred_alpha debug"
                         type="render_objects_post_scene_renderer"
                         size="0.5" aspect_ratio="true" position="0.5 0.0"
                         render_opaque="false" 
                         render_alpha="true">

      <material_effects particle_effect="Particle">
        <material_effect material_type="0"   effect="Diffused" />
        <material_effect material_type="2"   effect="Textured" />
        <material_effect material_type="514" effect="TexturedEnvironment" />
        <material_effect material_type="518" effect="NormalmapEnvironment" />
        <material_effect material_type="3"   effect="AnimatedTextured" />
        <material_effect material_type="6"   effect="Normalmap" />
        <material_effect material_type="7"   effect="AnimatedNormalmap" />
        <material_effect material_type="34"  effect="Textured" />
        <material_effect material_type="38"  effect="Normalmap" />
        <material_effect material_type="39"  effect="AnimatedNormalmap" />
        <material_effect material_type="10"  effect="Lightmap" />
        <material_effect material_type="14"  effect="LightmapNormalmap" />
        <material_effect material_type="134" effect="RadiosityNormalmap" />
        <material_effect material_type="18"  effect="SpecularTextured" />
        <material_effect material_type="22"  effect="SpecularNormalmapTextured" />
        <material_effect material_type="23"  effect="AnimatedSpecularNormalmapTextured" />
        <material_effect material_type="26"  effect="SpecularLightmapTextured" />
        <material_effect material_type="30"  effect="SpecularLightmapNormalmapTextured" />
        <material_effect material_type="150" effect="SpecularRadiosityNormalmapTexturedTechnique" />
        <material_effect material_type="55"  effect="AnimatedSpecularNormalmapTextured" />
      </material_effects>
      
    </post_scene_renderer>
    
    <post_scene_renderer name="HDR_ambient_pass" effect="DeferredAmbientPass" active="true" render_target="HDR_COLOR">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="RT0_ARGB_8"/>
        <input_sampler type="texture" index="1" texture="RT2_ARGB_8"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR deferred lighting" 
                         type="deferred_post_scene_renderer" 
                         effect="DeferredLightPass" 
                         render_target="HDR_COLOR"
                         active="true">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="RT0_ARGB_8"/>
        <input_sampler type="texture" index="1" texture="RT3_ARGB_8"/>
        <input_sampler type="texture" index="2" texture="RT1_RG_16F"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_copy_glow" effect="Texture" render_target="HDR_GLOW">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="RT1_ARGB_8"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_alpha_pass"
                         type="render_objects_post_scene_renderer"
                         render_target="HDR_ALPHA"
                         render_opaque="false" 
                         render_alpha="true">
      <material_effects particle_effect="Particle">
        <material_effect material_type="0"   effect="Diffused" />
        <material_effect material_type="2"   effect="Textured" />
        <material_effect material_type="514" effect="TexturedEnvironment" />
        <material_effect material_type="518" effect="NormalmapEnvironment" />
        <material_effect material_type="3"   effect="AnimatedTextured" />
        <material_effect material_type="6"   effect="Normalmap" />
        <material_effect material_type="7"   effect="AnimatedNormalmap" />
        <material_effect material_type="34"  effect="Textured" />
        <material_effect material_type="38"  effect="Normalmap" />
        <material_effect material_type="39"  effect="AnimatedNormalmap" />
        <material_effect material_type="10"  effect="Lightmap" />
        <material_effect material_type="14"  effect="LightmapNormalmap" />
        <material_effect material_type="134" effect="RadiosityNormalmap" />
        <material_effect material_type="18"  effect="SpecularTextured" />
        <material_effect material_type="22"  effect="SpecularNormalmapTextured" />
        <material_effect material_type="23"  effect="AnimatedSpecularNormalmapTextured" />
        <material_effect material_type="26"  effect="SpecularLightmapTextured" />
        <material_effect material_type="30"  effect="SpecularLightmapNormalmapTextured" />
        <material_effect material_type="150" effect="SpecularRadiosityNormalmapTexturedTechnique" />
        <material_effect material_type="55"  effect="AnimatedSpecularNormalmapTextured" />
      </material_effects>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_first_pass" effect="HDRFirstPass" active="true" render_target="HDR_MRT">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_COLOR"/>
        <input_sampler type="texture" index="1" texture="HDR_GLOW"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_luminance_243" render_target="HDR_LUMINANCE_243"
                         effect="DownsampleLuminance" 
                         size="243"
                         absolute_size="true"
                         aspect_ratio="false">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_LUMINANCE"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_luminance_81" render_target="HDR_LUMINANCE_81"
                         effect="DownsampleLuminance" 
                         size="81"
                         absolute_size="true"
                         aspect_ratio="false">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_LUMINANCE_243"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_luminance_27" render_target="HDR_LUMINANCE_27"
                         effect="DownsampleLuminance" 
                         size="27"
                         absolute_size="true"
                         aspect_ratio="false">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_LUMINANCE_81"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_luminance_9" render_target="HDR_LUMINANCE_9"
                         effect="DownsampleLuminance" 
                         size="9"
                         absolute_size="true"
                         aspect_ratio="false">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_LUMINANCE_27"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_luminance_3" render_target="HDR_LUMINANCE_3"
                         effect="DownsampleLuminance" 
                         size="3"
                         absolute_size="true"
                         aspect_ratio="false">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_LUMINANCE_9"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_luminance_1" render_target="HDR_LUMINANCE_1"
                         effect="DownsampleLuminance" 
                         size="1"
                         absolute_size="true"
                         aspect_ratio="false">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_LUMINANCE_3"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_luminance_blend" render_target="HDR_LUMINANCE_FINAL"
                         effect="LuminanceBlendPass" 
                         size="1"
                         absolute_size="true"
                         aspect_ratio="false"
                         use_time="true"
                         use_delta_time="true">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_LUMINANCE_1"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_bloom_2" render_target="HDR_BLOOM_2"
                         effect="DownSample4x"
                         size="0.5"
                         aspect_ratio="true">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_BLOOM_FIRST"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_bloom_4" render_target="HDR_BLOOM_4"
                         effect="DownSample4x"
                         size="0.25"
                         aspect_ratio="true">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_BLOOM_2"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_bloom_vertical" render_target="HDR_BLOOM_VERTICAL"
                         effect="Smart5BloomVertical"
                         size="0.25"
                         aspect_ratio="true">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_BLOOM_4"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_bloom_final" render_target="HDR_BLOOM_FINAL"
                         effect="Smart5BloomHoritzontal"
                         size="0.25"
                         aspect_ratio="true">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_BLOOM_VERTICAL"/>
      </input_samplers>
    </post_scene_renderer>
    <post_scene_renderer name="HDR_final" effect="HDRFinalPass">
      <input_samplers>
        <input_sampler type="texture" index="0" texture="HDR_COLOR"/>
        <input_sampler type="texture" index="1" texture="HDR_BLOOM_FINAL"/>
        <input_sampler type="texture" index="2" texture="HDR_LUMINANCE_FINAL"/>
        <input_sampler type="texture" index="3" texture="HDR_GLOW"/>
