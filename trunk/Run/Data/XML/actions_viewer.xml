<Actions>

  <!--.......DEBUG ACTIONS.........-->
  <!-- Log Render -->
	<action name="LogRender">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_F2"/>
	</action>
	
	<action name="LogRender_PageDown">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_UP_DOWN" Code="KEY_PGDOWN"/>
	</action>
	
	<action name="LogRender_PageUp">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_UP_DOWN" Code="KEY_PGUP"/>
	</action>
	
	<action name="LogRender_PrevLine">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN" Code="KEY_LCTRL"/>
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_UP_DOWN" Code="KEY_UP"/>
	</action>
	
	<action name="LogRender_NextLine">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN" Code="KEY_LCTRL"/>
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_UP_DOWN" Code="KEY_DOWN"/>
	</action>
  <!-- Log Render END -->

	<action name="ReloadActions">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_F8"/>
	</action>

	<action name="ReloadShaders">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_F9"/>
	</action>

	<action name="ReloadScript">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_F11"/>
	</action>
 
 	<action name="reloadGUI" script="GUI_MANAGER:reloadGui()">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_F12"/>
	</action>
  
  <action name="Console">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_GRAVE"/>
  </action>

	<!--.......VIEWER ACTIONS.........-->
  <action name="toggleGUI" script="toggle_gui()">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_TAB"/>
	</action>
  
  <action name="setNextMode" script="set_next_mode()">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_M"/>
  </action>
  
  <action name="showNormals" script="VIEWER_PROCESS:toggle_normals()">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_N"/>
  </action>
  
  <action name="showBoxes" script="VIEWER:toggle_boxes()">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_B"/>
  </action>
  
  <action name="toggleSpheres" script="VIEWER:toggle_spheres()">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_P"/>
  </action>
  
  <action name="next" script="next()">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_RIGHT"/>
  </action>
  
  <action name="previous" script="previous()">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_LEFT"/>
  </action>
  
  <action name="nextAnimation" script="next_animation()">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_UP"/>
  </action>
  
  <action name="previousAnimation" script="previous_animation()">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_DOWN"/>
  </action>
  
  <action name="ShowAjuda">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_F1"/>
	</action>

  <action name="Yaw">
    <input deviceType="IDV_MOUSE" AxisType="AXIS_MOUSE_X" Delta="1.f"/>
  </action>
  
  <action name="Pitch">
    <input deviceType="IDV_MOUSE" AxisType="AXIS_MOUSE_Y" Delta="1.f"/>
  </action>
  
  <action name="ZoomCamera">
		<input deviceType="IDV_MOUSE" AxisType="AXIS_MOUSE_Z" Delta="1.f"/>
	</action>

  <action name="SetLightsONOFF">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_L"/>
  </action>

  <action name="ReloadMeshActual">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_R"/>
  </action>
  
  <!--........BOT ACTIONS...........-->
  <action name="ShootBOT">
    <input deviceType="IDV_MOUSE" EventType="EVENT_DOWN" Code="MOUSE_BUTTON_LEFT"/>
  </action>
  
  <action name="AimBot">
    <input deviceType="IDV_MOUSE" EventType="EVENT_DOWN_UP" Code="MOUSE_BUTTON_RIGHT"/>
  </action>
  
  <!--...........MOVEMENT...........-->
	<action name="Run">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN" Code="KEY_LSHIFT"/>
	</action>

	<!--action name="Walk">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN_UP" Code="KEY_LSHIFT"/>
	</action-->

	<action name="MoveFwd">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN" Code="KEY_W"/>
	</action>

	<action name="MoveBack">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN" Code="KEY_S"/>
	</action>

	<action name="MoveLeft">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN" Code="KEY_A"/>
	</action>

	<action name="MoveRight">
		<input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN" Code="KEY_D"/>
	</action>

  <action name="MoveUp">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN" Code="KEY_X"/>
  </action>

  <action name="MoveDown">
    <input deviceType="IDV_KEYBOARD" EventType="EVENT_DOWN" Code="KEY_C"/>
  </action>

</Actions>